<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtmealname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Meal Name: "
            android:textColor="@color/purple"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Meal Name"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txtmealprice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="monospace"
            android:text="Price : "
            android:textColor="@color/purple"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtdollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="$"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtMealPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtcookname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Cook: "
            android:textColor="@color/purple"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Cook Name"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtcuisine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="monospace"
            android:text="Cuisine: "
            android:textColor="@color/purple"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMealCuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuisine"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtmealtype1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Meal Type: "
            android:textColor="@color/purple"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtMealType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:text="Meal Type"
             />
        <TextView
            android:id="@+id/txtmealrating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:layout_marginStart="20dp"
            android:text="Rating: "
            android:textColor="@color/purple"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
        android:id="@+id/txtRequestStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtmealallergens1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Allergens: "
            android:textColor="@color/purple"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMealAllergens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Allergens"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
    android:id="@+id/txtmealingredients1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:fontFamily="monospace"
    android:text="Ingredients: "
    android:textColor="@color/purple"
    android:textSize="15dp"
    android:textStyle="bold" />

    <TextView
        android:id="@+id/txtIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="ingredients"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtmealdescription1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Description: "
            android:textColor="@color/purple"
            android:textSize="15dp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMealDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="monospace"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Description"
         />
    </LinearLayout>

    <Button
        android:id="@+id/btnRequestMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request"
        android:backgroundTint="@color/purple"
        android:layout_gravity="center"
        android:fontFamily="monospace"
        android:textSize="15sp"
         />
</LinearLayout>