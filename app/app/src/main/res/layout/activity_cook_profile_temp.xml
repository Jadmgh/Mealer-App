<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/img"
    >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:srcCompat="@mipmap/ic_launcher_foreground"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/txtcreatemeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Create A Meal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">
            <TextView
                android:id="@+id/txtmenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Menu"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="28sp"
                android:textStyle="bold"/>



            <ListView
                android:id="@+id/menuList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"

                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <TextView
                android:id="@+id/txtofferedmenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Offered Menu"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <ListView
                android:background="@drawable/custom_edittext"
                android:id="@+id/offeredMealsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

            <Button
                android:id="@+id/btnCreateMeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                android:backgroundTint="@color/purple"
                android:layout_gravity="center"
                android:text="Create meal"


                />


            <TextView
                android:id="@+id/txtSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="false"
                android:layout_marginTop="200dp"
                android:gravity="left"
                android:text="Sign out"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="659dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>

